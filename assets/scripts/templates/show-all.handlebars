{{#each vocabs as |vocab|}}
{{log vocab}}
<section data-id="{{vocab.id}}">
  <h3>{{limit vocab.word 10}}</h3>
  <p>
    {{#if vocab.sounds_like}}
      Sounds like: {{limit vocab.sounds_like 15}}
    {{else}}
      Not yet defined.
    {{/if}}
  </p>
  <p>
    {{#if vocab.definition}}
      Definition: {limit vocab.definition 15}}
    {{else}}
      Not yet defined.
    {{/if}}
  </p>

  <p>
    {{#if vocab.sentence}}
      Sentence: {{limit vocab.sentence 15}}
    {{else}}
      Not yet defined.
    {{/if}}
  </p>
{{/each}}
